@model ContiNet.Models.Country

<h1>Edit Country</h1>

<form method="post">
  @Html.AntiForgeryToken()
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
  </div>

  <div class="form-group">
    <label for="ContinentId">Continent</label>
    <select id="ContinentId" name="ContinentId" required>
      @foreach (var continent in ViewBag.Continents as List<ContiNet.Models.Continent>)
        {
        <option value="@continent.Id" @(Model.ContinentId==continent.Id ? "selected" : "" )>
          @continent.Name
        </option>
        }
    </select>
  </div>

  <div class="form-group">
    <label for="Population">Population</label>
    <input type="number" id="Population" name="Population" class="form-control" value="@Model.Population" required />
  </div>

  <button type="submit" class="btn btn-primary">Save Changes</button>
  <a href="@Url.Action("Index", "Country" )" class="btn btn-secondary">Cancel</a>
</form>
